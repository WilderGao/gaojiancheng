<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.gaojiancheng.activity.InformationActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="370dp"
        android:layout_height="472dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.497"
        app:layout_constraintHorizontal_bias="0.487">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="380dp"
                android:layout_height="519dp"
                android:background="@drawable/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/friend_name"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/imageView7" />
            <TextView
                android:id="@+id/friend_name"
                android:layout_width="352dp"
                android:layout_height="54dp"
                android:textSize="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.037"
                app:layout_constraintHorizontal_bias="0.538" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/account_people"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView7"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView7"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView7"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintVertical_bias="0.179"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/friend_account"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:textSize="30dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView7"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.732"
                app:layout_constraintVertical_bias="0.212"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/sex"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView7"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintVertical_bias="0.401"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/imageView8" />

            <TextView
                android:id="@+id/friend_sex"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:textSize="30dp"
                app:layout_constraintLeft_toRightOf="@+id/imageView8"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/friend_account"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.086"
                android:layout_marginStart="13dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/year"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView7"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="182dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/search_name"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintVertical_bias="0.502"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/imageView9" />

            <TextView
                android:id="@+id/friend_age"
                android:layout_width="258dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView7"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/search_sex"
                app:layout_constraintLeft_toRightOf="@+id/imageView9"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="178dp"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintVertical_bias="0.096"
                android:textSize="30dp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="394dp"
        android:layout_height="57dp"
        android:text="删  除  好  友"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        android:background="@drawable/redbutton"
        android:id="@+id/delete_friend" />

</android.support.constraint.ConstraintLayout>